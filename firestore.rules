rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection - each user can only access their own document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Validate data structure for writes
      allow create: if isOwner(userId) 
        && request.resource.data.keys().hasAll(['topics', 'settings'])
        && request.resource.data.topics is list
        && request.resource.data.settings is map;
      
      allow update: if isOwner(userId)
        && request.resource.data.keys().hasAll(['topics', 'settings'])
        && request.resource.data.topics is list
        && request.resource.data.settings is map;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
